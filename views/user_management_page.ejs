                        <script>
                            $("#search-employee-id-button").on("click", (e) => {
                                let id = $("#input-id-employee").val();
                                if (IsNumber(id)) {
                                    searchEmployee(id);
                                    return 0;
                                }
                                alert("Numbers Only! ");
                            })
                            function searchEmployee(id) {
                                // Mendapatkan nilai ID karyawan dari input
                                var employeeId = id;
                                
                                // Simulasi data karyawan (biasanya ini akan menjadi panggilan AJAX ke server)
                                var employeeData = [
                                    { id: 1, name: "John Doe", position: "Manager" },
                                    { id: 2, name: "Jane Smith", position: "Developer" },
                                    // Data lainnya
                                ];

                                // Mencari data karyawan berdasarkan ID
                                var employee = employeeData.find(function(emp) {
                                    return emp.id == employeeId;
                                });

                                // Membuat tabel HTML untuk menampilkan informasi karyawan
                                var tableHTML = `
                                    <table class='table'>
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Action</th>
                                                </tr>
                                            </thead>
                                    <tbody>`;

                                if (employee) {
                                    tableHTML += "<tr><td>" + employee.id + "</td><td>" + employee.name + "</td><td>" 
                                        + `<button type="button" class="btn btn-sm btn-success">
                                            <i>
                                                add    
                                            </i>
                                            </button>`
                                        + "</td></tr>";
                                } else {
                                    tableHTML += "<tr><td colspan='3'>Employee not found</td></tr>";
                                }

                                tableHTML += "</tbody></table>";

                                let loading = `
                                <div class="text-center m-5">
                                    <div class="spinner-grow spinner-grow-sm text-warninggoi" role="status">
                                        <span class="sr-only">Loading...</span>
                                    </div>
                                </div>
                                `;
                                // Menampilkan tabel di dalam div dengan id "employeeTable"
                                $("#employee-search-result").html(loading);
                                setTimeout(() => {
                                    // Menampilkan tabel di dalam div dengan id "employeeTable"
                                    $("#employee-search-result").html(tableHTML);
                                }, 1000);
                        }

